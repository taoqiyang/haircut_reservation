/* pages/admin/index.wxss */
@import '../my/index.wxss';

.radio-group {
  flex-wrap: wrap;
  padding-top: 6rpx;
  padding-left: 32rpx;
}

.radio-label {
  width: 32%;
  display: flex;
  align-items: center;
  vertical-align: middle;
  /* margin-bottom: 12rpx; *//* margin-right: 32rpx; */
}

.radio {
  zoom: 70%;
  margin-right: 12rpx;
}

.radio-container {
  height: 16%;
  align-items: stretch;
  min-height: 0;
  background-color: white;
}

.scroll-view {
  height: 84%;
  /* background-color: lightblue; */
}

.label-1__text, .label-2__text {
  display: inline-block;
  vertical-align: middle;
}
